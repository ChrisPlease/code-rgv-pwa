  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --config ./webpack.config.ts",
    "build-dev": "NODE_ENV=development webpack-dev-server --config ./webpack.config.ts --progress",
    "lint": "tslint -c tslint.json src/**/*.{ts,tsx} --type-check --project ./tsconfig.json",
    "lint-fix": "tslint -c tslint.json --fix src/**/*.{ts,tsx} --type-check --project ./tsconfig.json",
    "clean": "gulp clean",
    "precommit": "lint-staged",
    "prepush": "run-p clean build lint test",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codergvbrownsville/codergvb-pwa.git"
  },
  "keywords": [],
